<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_big"
    android:layout_width="@dimen/card_big_view_holder_card_big_height"
    android:layout_height="@dimen/card_big_view_holder_card_big_height"
    android:background="@drawable/card_big_view_holder_card_big_background">

    <ImageView
        android:id="@+id/surface_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/surface_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/text_constraint_layout"
        android:layout_width="@dimen/card_big_view_holder_text_constraint_layout_width"
        android:layout_height="@dimen/card_big_view_holder_text_constraint_layout_height"
        android:layout_marginLeft="@dimen/card_big_view_holder_text_constraint_layout_margin_start"
        android:layout_marginTop="@dimen/card_big_view_holder_text_constraint_layout_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surface_image_view"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="220dp">
    
        <android.support.constraint.ConstraintLayout
            android:id="@+id/headline6_color_style_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_big_view_holder_headline6_color_style_constraint_layout_height"
            android:layout_marginTop="@dimen/card_big_view_holder_headline6_color_style_constraint_layout_margin_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="12dp">
        
            <TextView
                android:id="@+id/headline6_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/card_big_view_holder_headline6_text_view_margin_end"
                android:layout_marginTop="@dimen/card_big_view_holder_headline6_text_view_margin_top"
                android:fontFamily="@font/font_roboto_medium"
                android:gravity="left"
                android:letterSpacing="0.01"
                android:lineSpacingMultiplier="1"
                android:text="Where to go for a walk!"
                android:textColor="@color/card_big_view_holder_headline6_text_view_text_color"
                android:textSize="@dimen/card_big_view_holder_headline6_text_view_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="4dp"/>
        </android.support.constraint.ConstraintLayout>
    
        <android.support.constraint.ConstraintLayout
            android:id="@+id/overline_color_style_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_big_view_holder_overline_color_style_constraint_layout_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">
        
            <TextView
                android:id="@+id/overline_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/card_big_view_holder_overline_text_view_margin_end"
                android:fontFamily="@font/font_roboto_medium"
                android:gravity="left"
                android:letterSpacing="0.08"
                android:lineSpacingMultiplier="1.14"
                android:text="90 LIKES"
                android:textColor="@color/card_big_view_holder_overline_text_view_text_color"
                android:textSize="@dimen/card_big_view_holder_overline_text_view_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>