<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/input3_constraint_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/input3_activity_input3_constraint_layout_background_color">

	<ImageView
		android:id="@+id/image_image_view"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:scaleType="centerCrop"
		android:src="@drawable/charlie-deets-517076-unsplash"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<android.support.constraint.ConstraintLayout
		android:id="@+id/text_field_constraint_layout"
		android:layout_width="0dp"
		android:layout_height="@dimen/input3_activity_text_field_constraint_layout_height"
		android:layout_marginLeft="@dimen/input3_activity_text_field_constraint_layout_margin_start"
		android:layout_marginTop="12dp"
		android:layout_marginRight="@dimen/input3_activity_text_field_constraint_layout_margin_end"
		android:background="@color/input_background"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/greet_text_text_view">

		<TextView
			android:id="@+id/input_device_number_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/input3_activity_input_device_number_text_view_margin_start"
			android:fontFamily="@font/font_roboto_regular"
			android:gravity="left"
			android:letterSpacing="0.01"
			android:lineSpacingMultiplier="1.09"
			android:text="Device number"
			android:textColor="@color/input3_activity_input_device_number_text_view_text_color"
			android:textSize="@dimen/input3_activity_input_device_number_text_view_text_size"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/icon_image_view"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="42dp"
			tools:layout_editor_absoluteY="15dp" />

		<ImageView
			android:id="@+id/icon_image_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/input3_activity_icon_image_view_margin_start"
			android:layout_marginTop="@dimen/input3_activity_icon_image_view_margin_top"
			android:src="@drawable/icon_2_2"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="9dp"
			tools:layout_editor_absoluteY="15dp" />
	</android.support.constraint.ConstraintLayout>

	<EditText
		android:id="@+id/input_name_edit_text"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:layout_marginLeft="@dimen/input3_activity_input_name_edit_text_margin_start"
		android:layout_marginTop="@dimen/input3_activity_input_name_edit_text_margin_top"
		android:layout_marginRight="@dimen/input3_activity_input_name_edit_text_margin_end"
		android:background="@color/input_background"
		android:fontFamily="@font/font_roboto_regular"
		android:gravity="left"
		android:lineSpacingMultiplier="1"
		android:text="@string/input3_activity_input_name_edit_text_text"
		android:textColor="@color/input3_activity_input_name_edit_text_text_color"
		android:textSize="@dimen/input3_activity_input_name_edit_text_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_field_constraint_layout" />

	<TextView
		android:id="@+id/greeting_text_view"
		android:layout_width="270dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:fontFamily="@font/font_kumarone_regular"
		android:gravity="center"
		android:letterSpacing="0.02"
		android:lineSpacingMultiplier="1"
		android:text="Hello, Mike!"
		android:textColor="@color/input3_activity_greeting_text_view_text_color"
		android:textSize="@dimen/input3_activity_greeting_text_view_text_size"
		app:layout_constraintEnd_toStartOf="@+id/image_image_view"
		app:layout_constraintStart_toEndOf="@+id/image_image_view"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/greet_text_text_view"
		android:layout_width="@dimen/input3_activity_greet_text_text_view_width"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/input3_activity_greet_text_text_view_margin_top"
		android:fontFamily="@font/font_tillana_semibold"
		android:gravity="center"
		android:letterSpacing="0.01"
		android:lineSpacingMultiplier="1"
		android:text="Please input below the number of device and name of pet:"
		android:textColor="@color/input3_activity_greet_text_text_view_text_color"
		android:textSize="@dimen/input3_activity_greet_text_text_view_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/greeting_text_view" />

	<Button
		android:id="@+id/continue_button"
		android:layout_width="@dimen/input3_activity_continue_button_width"
		android:layout_height="@dimen/input3_activity_continue_button_height"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="36dp"
		android:background="@drawable/input3_activity_continue_button_selector"
		android:fontFamily="@font/font_roboto_medium"
		android:gravity="center"
		android:lineSpacingMultiplier="1"
		android:text="CONTINUE"
		android:textAllCaps="true"
		android:textColor="@color/input3_activity_continue_button_text_color"
		android:textSize="@dimen/input3_activity_continue_button_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>